<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Añadir sms</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <!-- <link rel="stylesheet" href="/css/styles.css"> -->
  <link rel="stylesheet" href="/css/estilos.css">
  <link rel="stylesheet" href="/css/navbar.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'ADMINISTRACION'}) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-md">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <form action="/admin/smss/insert" method="POST" onsubmit="return validate();">
                  <div class="card-header">
                    <h3 class="card-title">Muevo sms</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-3">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Teléfono</label>
                            <input type="text" name="movsms" id="movsms" class="form-control" value="" autofocus/>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-6"></div>
                      <div class="col-3">
                        <div class="mb-1">
                          <label class="form-label">Estado</label>
                          <select class="form-select" id="cbosta" name="stasms" value="">
                            <% datos.arrEstadosSms.map(element => { %> 
                              <option value="<%- element.id %>"><%- element.des %></option>
                            <% }) %> 
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Texto</label>
                            <textarea name="texsms" id="texsms" class="form-control" value="" maxlength="140" rows="5" style="resize: vertical"></textarea>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <input type="submit" class="btn btn-white" action="action" onclick="window.history.go(-1); return false;" value="Cancelar" />
                      <button type="submit" class="btn btn-success ms-auto" id="btnInsert">Crear nuevo sms</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script>
    const texsms = document.getElementById('texsms')

    const validate = () => {
      const movsmsValue = movsms.value.trim()
      const texsmsValue = texsms.value.trim()

      if (movsmsValue === '') {
        setError(movsms, 'Móvil requerido')
        setTimeout(function () {
          setSuccess(movsms)
        }, 3000)
        return false
        if (texsmsValue === '') {
          setError(texsms, 'Texto requerido')
          setTimeout(function () {
            setSuccess(texsms)
          }, 3000)
          return false
        }

        return true
      }

    const setSuccess = (element) => {
      const inputControl = element.parentElement;
      const errorDisplay = inputControl.querySelector('.invalid-feedback');

      errorDisplay.innerText = '';
      inputControl.classList.add('is-valid');
      element.classList.remove('is-invalid');
    }
    const setError = (element, message) => {
      const inputControl = element.parentElement;
      const errorDisplay = inputControl.querySelector('.invalid-feedback');

      errorDisplay.innerText = message;
      element.classList.add('is-invalid');
      inputControl.classList.remove('is-valid');
    }
  </script>
</body>
</html>