<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Estadística</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'ADMINISTRACION' }) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card mt-3">
                <form action="/admin/estadisticas" method="POST" onsubmit="return validate();">
                  <input type="hidden" id="reffra" name="reffra">
                  <div class="card-header">
                    <h3 class="card-title">Estadística</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-6">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Desde</label>
                            <input type="date" name="desde" id="desde" class="form-control"
                              value="<%- datos.desde %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-6">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Hasta</label>
                            <input type="date" name="hasta" id="hasta" class="form-control"
                              value="<%- datos.hasta %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <div class="form-label">Carga</div>
                          <select class="form-select" id="cbocar" name="refcar" value="">
                            <% datos.cargas.map(element=> { %>
                            <option value="<%- element.REFCAR %>">
                              <%- element.DESCAR %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <button type="submit" class="btn btn-success ms-auto">Generar estadística</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>

  <script src="/js/ayuda.js"></script>
  <script>
    const cboC = document.getElementById('cbocar');

    document.getElementById('reffra').value = cboC.value

    cboC.addEventListener('change', (e) => {
      document.getElementById('refdoc').value = e.target.options[e.target.selectedIndex].value
    })
  </script>
  <script>
    const desde = document.getElementById('desde')
    const hasta = document.getElementById('hasta')

    const validate = () => {
      const desdeValue = desde.value
      const hastaValue = hasta.value

      if (isNaN(Date.parse(desdeValue))) {
        setError(desde, 'Fecha requerida')
        setTimeout(function () {
          setSuccess(desde)
        }, 3000)
        return false
      }
      if (isNaN(Date.parse(hastaValue))) {
        setError(hasta, 'Fecha requerida')
        setTimeout(function () {
          setSuccess(hasta)
        }, 3000)
        return false
      }

      return true
    }
    const setSuccess = (element) => {
      const inputControl = element.parentElement;
      const errorDisplay = inputControl.querySelector('.invalid-feedback');

      errorDisplay.innerText = '';
      inputControl.classList.add('is-valid');
      element.classList.remove('is-invalid');
    }
    const setError = (element, message) => {
      const inputControl = element.parentElement;
      const errorDisplay = inputControl.querySelector('.invalid-feedback');

      errorDisplay.innerText = message;
      element.classList.add('is-invalid');
      inputControl.classList.remove('is-valid');
    }
  </script>
</body>

</html>