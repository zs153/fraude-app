  <style>
    .subheader {
      font-size: .625rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: .04em;
      line-height: 1rem;
      color: #626976;
    }
    .progress-container {
      display: flex;
      height: 1rem;
      width: 100%;
      border-radius: 0.4rem;
      background: #f2f3f4;
      text-align: center;
      color: rgb(0 0 0 / 50%);
    }
    .chart {
      position: relative;
      display: inline-block;
      width: 110px;
      height: 110px;
      margin-top: 10px;
      margin-bottom: 10px;
      text-align: center;
    }
    .chart canvas {
      position: absolute;
      top: 0;
      left: 0;
    }
    .percent {
      display: inline-block;
      line-height: 110px;
      z-index: 2;
    }
    .subpercent {
      display: block;
      z-index: 4;
    }
    .percent:after {
      content: '%';
      margin-left: 0.1em;
      font-size: .8em;
    }
    .err {
      width: 10%;
      height: 100%;
      float: left;
    }
    .efe {
      width: 10%;
      height: 100%;
      float: left;
    }
    .tri {
      width: 10%;
      height: 100%;
      float: left;
    }
    .pre {
      width: 10%;
      height: 100%;
      float: left;
    }
    .otr {
      width: 10%;
      height: 100%;        
      float: left;
    }
    .legend {
      display: inline-block;
      width: 0.75rem;
      height: 0.75rem;
      border-radius: 4px;
    }
    .subpercent:after {
      margin-left: 0;
      font-size: .8em;
    }
    .progress-separated {
      border-right: 2px solid #fff;
    }
    .tooltip {
      position: relative;
      display: inline-block;
    }
    .tooltip:hover .tooltiptext {
      visibility: visible;
      opacity: 1;
    }
    .tooltiptext {
      visibility: hidden;
      width: 180px;
      color: black;
      text-align: center;
      border-radius: 6px;
      padding: 4px;
      position: absolute;
      z-index: 1;
      border: 1px solid rgb(233, 233, 233);
      bottom: 100%;
      left: 50%;
      transform: translateX(-10%);
      margin-bottom: 0.5rem;
      margin-left: -2rem;
      background-color: white;
      opacity: 0;
      transition: opacity 1s;
    }
    .darkGoldenRod {
      background-color: #b8860b;
    }
    .lightBlue {
      background-color: #add8e6;
    }
    .paleGreen {
      background-color: #98fb98;
    }
    .indianRed {
      background-color: #cd5c5c;
    }
    .peachPuff {
      background-color: #ffdab9;
    }
  </style>
</head>

