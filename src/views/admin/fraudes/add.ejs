<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Fraudes</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar', {opcion: 'FRAUDE' }) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <form action="#" id="add" method="POST" onsubmit="return validate();">
                  <div class="card-header">
                    <h3 class="card-title">Fraude</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">NIF/NIE</label>
                            <input type="text" name="nifcon" id="nifcon" class="form-control" style="text-transform: uppercase;" value="" autofocus />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-6">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Nombre</label>
                            <input type="text" name="nomcon" id="nomcon" class="form-control" style="text-transform: uppercase;" value="" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-4">
                        <div class="mb-1">
                          <label class="form-label">Correo electrónico</label>
                          <input type="text" name="emacon" id="emacon" class="form-control" value="" />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-9">
                        <div class="mb-1">
                          <div class="input-control">
                            <div class="form-label required">Tipo</div>
                            <select class="form-select form-control" id="cbotip" name="tipfra" value="">
                              <option value="0">SELECCIONE UN TIPO</option>
                              <% datos.tipos.map(element=> { %>
                                <option value="<%- element.IDTIPO %>">
                                  <%- element.DESTIP %>
                                </option>
                              <% }) %>
                            </select>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Ejercicio</label>
                            <input type="number" name="ejefra" id="ejefra" class="form-control" value="<%- datos.fraude.EJEFRA %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-1">
                        <div class="mb-1">
                          <label class="form-label">Adm</label>
                          <input type="text" name="funfra" id="funfra" class="form-control" value="<%- datos.fraude.FUNFRA %>" readonly />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-3">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Fecha</label>
                            <input type="date" name="fecfra" id="fecfra" class="form-control" value="<%- datos.fraude.ISOFEC %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-5">
                        <div class="mb-1">
                          <div class="form-label">Oficina</div>
                          <select class="form-select form-control" id="cboofi" name="ofifra" value="<%- datos.fraude.OFIFRA %>">
                            <% datos.oficinas.map(element=> { %>
                              <option value="<%- element.IDOFIC %>" <%- element.IDOFIC===datos.fraude.OFIFRA ? "selected" :"" %>>
                                <%- element.DESOFI %>
                              </option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                      <div class="col-2">
                        <div class="mb-1">
                          <label class="form-label">Teléfono</label>
                          <input type="text" name="telcon" id="telcon" class="form-control" value="" />
                        </div>
                      </div>
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label">Movil</label>
                            <input type="text" name="movcon" id="movcon" class="form-control" value="" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <label class="form-label">Observaciones</label>
                          <textarea type="text" name="obsfra" id="obsfra" class="form-control" rows="3" style="resize: vertical"></textarea>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <input class="btn btn-white" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancelar" />
                      <button type="submit" class="btn btn-success ms-auto" id="btnInsert">Crear nevo fraude</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/addEditFraude.min.js"></script>
  <script>
    const elemAdd = document.getElementById('add');
    elemAdd.setAttribute('action', `/admin/fraudes/insert?part=${getCookie('filtro')}`)
  </script>
</body>

</html>