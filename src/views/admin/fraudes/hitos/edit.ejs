<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Hitos</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
  <!-- <link rel="stylesheet" href="/css/estilos.css">
  <link rel="stylesheet" href="/css/navbar.css"> -->
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../../partials/header') %>
    <%- include('../../../partials/navbar', {opcion: 'FRAUDE'}) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <form action="/admin/fraudes/hitos/update" method="POST" onsubmit="return validate();">
                  <input type="hidden" id="idhito" name="idhito" value="<%- datos.hito.IDHITO %>">
                  <input type="hidden" id="idfrau" name="idfrau" value="<%- datos.fraude.IDFRAU %>">
                  <input type="hidden" id="stahit" name="stahit" value="<%- datos.hito.STAHIT %>">
                  <div class="card-header">
                    <h3 class="card-title">Hito</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-8">
                        <div class="mb-1">
                          <div class="form-label">Tipo</div>
                          <div class="input-control">
                            <select class="form-select form-control" id="cbotip" name="tiphit" value="">
                              <% datos.tipos.map(element=> { %>
                              <option value="<%- element.IDTIPO %>" data-foo="<%- element.ANUHIT %>" <%- element.IDTIPO === datos.hito.TIPHIT ? "select": element.DISABLED ? 'disabled':'' %>>
                                <%- element.DESTIP %>
                              </option>
                              <% }) %>
                            </select>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-4">
                        <div class="mb-1">
                          <div class="input-control required">
                            <label class="form-label required">Importe</label>
                            <input type="text" name="imphit" id="imphit" class="form-control" value="<%- datos.hito.IMPHIT %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <label class="form-label">Observaciones</label>
                          <textarea type="text" name="obshit" id="obshit" class="form-control" rows="3" style="resize: vertical"><%- datos.hito.OBSHIT %></textarea>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <input class="btn btn-white" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancelar" />
                      <button type="submit" class="btn btn-success ms-auto" id="btnUpdate">Actualizar hito</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/editHito.min.js"></script>
  <script>
    const elemUpd = document.getElementById('upd');
    elemUpd.setAttribute('action', `/admin/usuarios/update?part=${getCookie('filtro')}`)
  </script>
</body>
</html>